{
    "name": "entertainmenttadka/telegram-movie-bot",
    "description": "Secure Telegram Movie Bot for EntertainmentTadka",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "config.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "chmod 600 .env || true",
            "chmod 600 movies.csv || true",
            "chmod 600 users.json || true"
        ]
    }
}